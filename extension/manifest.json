{
  "manifest_version": 2,
  "name": "Leo Translate",
  "version": "1.6.0",

  "description": "Translate words on the internet pages using LinguaLeo API and add words to the LinguaLeo Dictionary.",

  "applications": {
    "gecko": {
      "id": "leotranslate@mdnsk",
      "strict_min_version": "55.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-render.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-capture.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_title": "Open dictionary",
    "default_popup": "templates/browser-action.html"
  },

  "options_ui": {
    "page": "templates/options-page.html",
    "browser_style": true
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "notifications",
    "storage",
    "*://api.lingualeo.com/*"
  ],

  "web_accessible_resources": ["templates/context-popup.html"]
}
